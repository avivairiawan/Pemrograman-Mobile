<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/daun"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/one"
            android:layout_width="138dp"
            android:layout_height="131dp"
            android:layout_marginRight="-4dp"
            android:background="@mipmap/apel"
            android:onClick="move1">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/two"
            android:layout_width="141dp"
            android:layout_height="133dp"
            android:layout_marginLeft="-6dp"
            android:layout_toRightOf="@id/one"
            android:background="@mipmap/durian"
            android:onClick="move2">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/three"
            android:layout_width="147dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-6dp"
            android:layout_marginRight="-1dp"
            android:layout_toRightOf="@id/two"
            android:background="@mipmap/jeruk"
            android:onClick="move3">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/four"
            android:layout_width="121dp"
            android:layout_height="137dp"
            android:layout_below="@id/one"
            android:layout_marginRight="-4dp"
            android:layout_marginTop="50dp"
            android:background="@mipmap/mangga"
            android:onClick="move4">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/five"
            android:layout_width="146dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/two"
            android:layout_marginLeft="-6dp"
            android:layout_marginTop="50dp"
            android:layout_toRightOf="@id/four"
            android:background="@mipmap/manggis"
            android:onClick="move5">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/six"
            android:layout_width="158dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/three"
            android:layout_marginLeft="-3dp"
            android:layout_marginTop="55dp"
            android:layout_marginRight="-1dp"
            android:layout_toRightOf="@id/five"
            android:background="@mipmap/straw"
            android:onClick="move6">

        </LinearLayout>


    </RelativeLayout>
</LinearLayout>